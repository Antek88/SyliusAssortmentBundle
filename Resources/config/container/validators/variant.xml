<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="sylius_assortment.validator.variant.unique.class">Sylius\Bundle\AssortmentBundle\Validator\VariantUniqueValidator</parameter>
        <parameter key="sylius_assortment.validator.unique_option_values_combination.class">Sylius\Bundle\AssortmentBundle\Validator\UniqueOptionValuesCombinationValidator</parameter>
    </parameters>

    <services>
        <service id="sylius_assortment.validator.variant.unique" class="%sylius_assortment.validator.variant.unique.class%">
            <argument type="service" id="sylius_assortment.manager.variant" />
            <tag name="validator.constraint_validator" alias="sylius_assortment.validator.variant.unique" />
        </service>
        <service id="sylius_assortment.validator.unique_option_values_combination" class="%sylius_assortment.validator.unique_option_values_combination.class%">
            <argument type="service" id="sylius_assortment.manager.variant" />
            <tag name="validator.constraint_validator" alias="sylius_assortment.validator.unique_option_values_combination" />
        </service>
    </services>

</container>
