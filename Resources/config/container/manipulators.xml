<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <services>
        <service id="sylius_assortment.manipulator.product" class="%sylius_assortment.manipulator.product.class%">
            <argument type="service" id="sylius_assortment.manager.product" />
            <argument type="service" id="sylius_assortment.inflector.slugizer" />
        </service>
        <service id="sylius_assortment.manipulator.option" class="%sylius_assortment.manipulator.option.class%">
            <argument type="service" id="sylius_assortment.manager.option" />
        </service>
        <service id="sylius_assortment.manipulator.variant" class="%sylius_assortment.manipulator.variant.class%">
            <argument type="service" id="sylius_assortment.manager.variant" />
        </service>
        <service id="sylius_assortment.manipulator.property" class="%sylius_assortment.manipulator.property.class%">
            <argument type="service" id="sylius_assortment.manager.property" />
        </service>
        <service id="sylius_assortment.manipulator.prototype" class="%sylius_assortment.manipulator.prototype.class%">
            <argument type="service" id="sylius_assortment.manager.prototype" />
        </service>
    </services>

</container>
