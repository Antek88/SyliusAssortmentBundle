<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius_assortment.manager.product.class">Sylius\Bundle\ResourceBundle\Doctrine\ResourceManager</parameter>
        <parameter key="sylius_assortment.repository.product.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\ResourceRepository</parameter>
        <parameter key="sylius_assortment.manager.option.class">Sylius\Bundle\ResourceBundle\Manager\Doctrine\ORM\ResourceManager</parameter>
        <parameter key="sylius_assortment.manager.property.class">Sylius\Bundle\ResourceBundle\Manager\Doctrine\ORM\ResourceManager</parameter>
        <parameter key="sylius_assortment.manager.prototype.class">Sylius\Bundle\ResourceBundle\Manager\Doctrine\ORM\ResourceManager</parameter>
        <parameter key="sylius_assortment.manager.variant.class">Sylius\Bundle\ResourceBundle\Manager\Doctrine\ORM\ResourceManager</parameter>
    </parameters>

    <services>
        <service id="sylius_assortment.doctrine.repository.product"
                factory-service="doctrine.orm.default_entity_manager"
                factory-method="getRepository"
                class="Doctrine\ORM\EntityRepository"
                public="false"
        >
            <argument>%sylius_assortment.model.product.class%</argument>
        </service>
        <service id="sylius_assortment.repository.product" class="%sylius_assortment.repository.product.class%">
            <argument type="service" id="sylius_assortment.doctrine.repository.product" />
            <argument>%sylius_assortment.model.product.class%</argument>
        </service>
        <service id="sylius_assortment.manager.product" class="%sylius_assortment.manager.product.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_assortment.model.product.class%</argument>
        </service>

        <service id="sylius_assortment.manager.option" class="%sylius_assortment.manager.option.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_assortment.model.option.class%</argument>
        </service>
        <service id="sylius_assortment.manager.property" class="%sylius_assortment.manager.property.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_assortment.model.property.class%</argument>
        </service>
        <service id="sylius_assortment.manager.prototype" class="%sylius_assortment.manager.prototype.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_assortment.model.prototype.class%</argument>
        </service>
        <service id="sylius_assortment.manager.variant" class="%sylius_assortment.manager.variant.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_assortment.model.variant.class%</argument>
        </service>
    </services>

</container>
