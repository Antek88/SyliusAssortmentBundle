<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mongo-mapping"
                        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="Sylius\Bundle\AssortmentBundle\Document\FluidProduct">
        <field fieldName="sku" name="sku" type="string" />
        <field fieldName="name" name="name" type="string" />
        <field fieldName="slug" name="slug" type="string" unique="true">
            <gedmo:slug fields="name" unique="true" />
        </field>
        <field fieldName="description" name="description" type="string" />
        <field fieldName="createdAt" name="createdAt" type="timestamp">
            <gedmo:timestampable on="create"/>
        </field>
        <field fieldName="updatedAt" name="updatedAt" type="timestamp">
            <gedmo:timestampable on="update"/>
        </field>
        <field fieldName="deletedAt" name="deletedAt" type="timestamp" />
    </mapped-superclass>

</doctrine-mongo-mapping>
