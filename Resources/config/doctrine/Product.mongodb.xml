<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mongo-mapping"
                        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="Sylius\Bundle\AssortmentBundle\Document\Product">
        <field fieldName="sku" name="sku" type="string" />
        <field fieldName="name" column="name" type="string" />
        <field fieldName="slug" column="slug" type="string">
            <gedmo:slug fields="name" />
        </field>
        <field fieldName="description" column="description" type="string" />
        <field fieldName="createdAt" column="createdAt" type="timestamp">
            <gedmo:timestampable on="create"/>
        </field>
        <field fieldName="updatedAt" column="updatedAt" type="timestamp">
            <gedmo:timestampable on="update"/>
        </field>
        <field fieldName="deletedAt" column="deletedAt" type="timestamp" />
    </mapped-superclass>

</doctrine-mongo-mapping>
