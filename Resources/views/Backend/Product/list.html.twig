{% extends 'SyliusAssortmentBundle:Backend:layout.html.twig' %}

{% block content %}

<h2>products list.</h2>

{% for product in products %}

    id: {{ product.id }} <br />
    name: {{ product.name }} <br />
    description... <br />
    {{ product.description }} <br />
    frontend link: <a href="{{ path('sylius_assortment_product_show', {'id': product.id, 'slug': product.slug}) }}">{{ product.name }}</a>
    
    <ul>
        <li><a href="{{ path('sylius_assortment_backend_product_show', {'id': product.id}) }}">details</a></li>
        <li><a href="{{ path('sylius_assortment_backend_product_update', {'id': product.id}) }}">edit</a></li>
        <li><a href="{{ path('sylius_assortment_backend_product_delete', {'id': product.id}) }}">delete</a></li>
    </ul>

{% endfor %}

{% endblock %}
